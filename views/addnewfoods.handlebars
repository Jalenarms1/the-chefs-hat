
<div class="w-100 d-flex justify-content-center">
    <form class="align-items-center">
        <div class="row my-3 row-cols-1 row-cols-md-2 g-4">
            <div class="card m-2" style="width: 17rem;">
                <div class="card-body">
                        <label for="meal">Main Course</label>
                        <input class="form-input" type="text" id="meal" name="meal" />
                        <label for="mealCal">Calories</label>
                        <br>
                        <input class="form-input w-25" type="text" id="mealcal" name="mealCal" />
                </div>
                <div class="d-grid gap-2 col-6 mx-auto">
                    <button id="mealBtn" class="btn btn-outline-dark">Add</button>
                </div>
            </div>

                <br>

            <div class="card m-2" style="width: 17rem;">
                <div class="card-body">
                    <label for="sides">Sides:</label>
                    <input class="form-input" type="text" id="sides" name="sides" />
                    <label for="sideCal">Calories</label>
                    <br>
                    <input class="form-input w-25" type="text" id="sidecal" name="sideCal" />
                </div>
                <div class="d-grid gap-2 col-6 mx-auto">
                    <button id="sideBtn" type="submit" class="btn btn-outline-dark">Add</button>
                </div>
            </div>
        </div>

            <br>

        <div class="row row-cols-1 row-cols-md-2 g-4">
            <div class="card m-2" style="width: 17rem;">
                <div class="card-body">
                    <label for="drinks">Drinks:</label>
                    <input class="form-input" type="text" id="drinks" name="drinks" />
                    <label for="drinksCal">Calories:</label>
                    <br>
                    <input class="form-input w-25" type="text" id="drinksCal" name="drinksCal" />
                </div>
                <div class="d-grid gap-2 col-6 mx-auto">
                    <button id="drinksBtn" class="btn btn-outline-dark">Add</button>
                </div>
            </div>

                <br>

            <div class="card m-2" style="width: 17rem;">
                <div class="card-body">
                    <label for="desert">Desert:</label>
                    <input class="form-input" type="text" id="desert" name="desert" />
                    <label for="deertCal">Calories:</label>
                    <br>
                    <input class="form-input w-25" type="text" id="desertCal" name="desertCal" />
                </div>
                <div class="d-grid gap-2 col-6 mx-auto">
                    <button id="desertBtn" type="submit" class="btn btn-outline-dark">Add</button>
                </div>
            </div>
        </div>
        <a href="/user/create" class="btn btn-dark">Create a Meal ></a>
    </form>
</div> 

