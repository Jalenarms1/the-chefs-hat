<section class="mb-2 w-75 m-auto">
  <div class="container w-100 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black">
          <div class="card-body p-md-5">
            <div class="row w-100 justify-content-center">
              <div class="w-75 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                <form class="mx-1 mx-md-4 w-100 d-flex flex-column">

                  <div class="d-flex flex-row mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="text" id="formName" class="form-control " required/>
                      <label class="form-label" for="formName">Full Name</label>
                      <div class="invalid-feedback">
                        This field is required.
                      </div>
                    </div>
                  </div>

                  <div class="d-flex flex-row mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="email" id="formEmail" class="form-control " required />
                      <label class="form-label" for="formEmail">Email</label>
                      <div class="invalid-feedback">
                        This field is required.
                      </div>
                    </div>
                  </div>

                  <div class="d-flex flex-row mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="password" id="formPass" class="form-control " required />
                      <label class="form-label" for="formPass">Password</label>
                      <small id="password-length-check" class="hide text-danger">Password must be more than 8 characters</small>
                      <div class="invalid-feedback">
                        This field is required.
                      </div>
                    </div>
                  </div>

                  <div class="d-flex flex-row mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="restruant" id="formRest" class="form-control " required />
                      <label class="form-label" for="formRest">Restaurant Name</label>
                      <div class="invalid-feedback">
                        This field is required.
                      </div>
                      <br>
                      <small for="restPic">Profile Image</small>
                      <input type="file" name="restPic" id="rest-pic" class="form-control" required>
                      <div class="invalid-feedback">
                        This field is required.
                      </div>

                    </div>
                  </div>

                  <div class="d-flex flex-row mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="text" id="address" class="form-control " required />
                      <label class="form-label" for="formAddress">Address</label>
                      <div class="invalid-feedback">
                        This field is required.
                      </div>
                    </div>
                  </div>

                    <div class="d-flex flex-row mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="phone" id="formPhone" class="form-control " required />
                      <label class="form-label" for="formPhone">Phone Number</label>
                      <div class="invalid-feedback">
                        This field is required.
                      </div>
                    </div>
                  </div>

                  <div class="w-100 justify-content-center mx-3">
                    <button type="button" class="btn btn-primary" id="registerbtn">Register</button>
                    <small id="message" class="p-1"><a href="/login">Already have an account?</a></small>
                    <img class="hide" id="loading-img-signup" src="https://upload.wikimedia.org/wikipedia/commons/b/b1/Loading_icon.gif?20151024034921" alt="loading" style="width: 30%;">
                  </div>

                </form>

              </div>
              
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

