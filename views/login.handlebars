<div class="wrap-login m-auto w-50 mt-5 bg-white p-4">
  <form class="bg-white">
    <div class="mb-3">
      <label for="emailLog" class="form-label">Email address</label>
      <input type="email" class="form-control" id="emailLog" aria-describedby="emailHelp" required>
      <div class="invalid-feedback">
        This field is required.
      </div>
    </div>
    <div class="mb-3">
      <label for="passLog" class="form-label">Password</label>
      <input type="password" class="form-control" id="passLog" required>
      <div class="invalid-feedback">
        This field is required.
      </div>
    </div>
    <button id="submit-login" class="btn btn-outline-dark">Submit</button>
    <small class="p-2"><a class="text-dark" href="/signup">Don't have an account yet?</a></small>
    <img class="hide" id="loading-img-login" src="https://upload.wikimedia.org/wikipedia/commons/b/b1/Loading_icon.gif?20151024034921" alt="loading" style="width: 20%;">
  </form>
</div>
